nav.navbar.navbar-default.navbar-inverse.navbar-fixed-top(role='navigation')
  div.container-fluid
    div.navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar

      a.navbar-brand(href='{{ loggedIn() ? "/game" : "/" }}')
        ul.ripple
          each letter in 'SuperSnake'
            li= letter

    div#bs-example-navbar-collapse-1.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-left
        li
          a(href='/leaderboard')  High Scores

      ul.nav.navbar-nav.navbar-right
        li(ng-hide='loggedIn()')
          a(ng-click='register()') Register

        li(ng-hide='loggedIn()')
          a(ng-click='login()') Login

        li(ng-show='loggedIn()')
          a(ng-click='logout()') Logout